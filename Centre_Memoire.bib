	pmid = {32493451},
	pmcid = {PMC7268631},
	keywords = {Alzheimer’s disease, Tau, Amyloid β, Hirano bodies, Neurofibrillary tangles, Phosphatidylinositol, SYNJ1},
	pages = {79}
}

