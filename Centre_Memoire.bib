@article{dyer_cognitive_2020,
	title = {Cognitive {Outcomes} of {Long}-term {Benzodiazepine} and {Related} {Drug} ({BDZR}) {Use} in {People} {Living} {With} {Mild} to {Moderate} {Alzheimer}'s {Disease}: {Results} {From} {NILVAD}},
