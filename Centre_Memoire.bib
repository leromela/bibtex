	keywords = {Aged, Alzheimer Disease, Humans, Female, Male, Aged, 80 and over, Cohort Studies, Incidence, Antipsychotic Agents, Cognitive Dysfunction, Accidental Falls, Delirium, Drug Utilization, Hypnotics and Sedatives, Independent Living},
	pages = {829--837}
}

