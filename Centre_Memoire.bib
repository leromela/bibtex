	number = {Pt 9},
	journal = {Brain: A Journal of Neurology},
	author = {Giffard, Bénédicte and Desgranges, Béatrice and Nore-Mary, Florence and Lalevée, Catherine and Beaunieux, Hélène and de la Sayette, Vincent and Pasquier, Florence and Eustache, Francis},
