@article{chen_low_2017,
	title = {Low {Prevalence} and {Clinical} {Effect} of {Vascular} {Risk} {Factors} in {Early}-{Onset} {Alzheimer}'s {Disease}},
	volume = {60},
	issn = {1875-8908},
	doi = {10.3233/JAD-170367},
	abstract = {BACKGROUND: Determinants of early-onset Alzheimer's disease (EOAD) are not well known. In late-onset AD, vascular risk factors (VRFs) are associated with earlier clinical manifestation.
OBJECTIVE: The objective of this study was to assess the putative association between VRFs and EOAD.
